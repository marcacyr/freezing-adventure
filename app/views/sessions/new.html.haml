.jumbotron.center
  %h1 Sign In
  %br
  = form_tag sessions_path do
    .field
      = label_tag :email
      = text_field_tag :email, params[:email]
    %br
    .field
      = label_tag :password
      = password_field_tag :password
    %br
    .actions
      = submit_tag "Sign In", class: "btn btn-primary btn-lg"
